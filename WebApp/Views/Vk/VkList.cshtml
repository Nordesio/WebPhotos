@using DbData.Models;
@model IEnumerable<Vkuser>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/Loader.css">
    <meta name="viewport" content="width=device-width" />
    <title>Список тем</title>
</head>

<body>
    @foreach (var item in Model)
    {
        string bcolorSpinner = "";
        string bcolor = "";
        string opacity = "1";
        if (item.Status != "completed")
        {
            bcolor = "rgba(70, 178, 255, 0.1)";
            opacity = "0.5";
            bcolorSpinner = "rgba(70, 178, 255, 0)";
        }
        else if (item.Status != "completed")
        {
            opacity = "0.5";
        }
        if (User.IsInRole("admin"))
        {

            <div class="dataPanel search_vk" disabled="disabled" data-vk-id="@item.Name" style="height:auto; padding:0px; margin-bottom:10px; position: relative; background-color:@(bcolor); opacity:@(opacity)">
                @if (item.Status != "completed")
                {
                    <div class="loader" style="background-color:@(bcolorSpinner)">
                        <div class="inner one" style="opacity: 1;"></div>
                        <div class="inner two" style="opacity: 1;"></div>
                        <div class="inner three" style="opacity: 1;"></div>
                    </div>
                }
                <table border="0" style="border-collapse: collapse; width:100%; height: 100%">
                    <tr>
                        <td style="height:40px">

                                    <img class="picTheme" src="~/found_1.png" width="20" height="20" />
                            <h4 class="dataTitle" style="margin-top:0px">
                                <a href="@Url.Action("VkResult", "Vk", new { vk_id = item.Id })">
                                    @item.Name
                                </a>
                                
                            </h4>
                        </td>
                       </tr>
                    <tr>
                    </tr>
                    <tr>
                        <td style="height:30px">

                            <h5 class="dataContText" style="margin-top:0px">
                                <blockquot>Обновлено:</blockquot>
                                <blockquot class="dataContText" style="color:black">@item.Date.Value</blockquot>
                                <blockquot class="dataContText" style="color:black">Создано пользователем с id: @item.UserId</blockquot>
                                @*<blockquot style="margin:0 0 0 30px">Получать уведомления в телеграм:</blockquot>*@
                               
                            </h5>

                        </td>
                        <td colspan="3" align="right">
                                <a href="@Url.Action("EditVkUser", new {vk_id = item.Id})" class="linkText img_text_link">
                                    <img class="picEdit" src="~/cog.png" width="16" height="16" />
                                    <span>Изменить</span>
                                </a>

                           @* <span class="stop_vk img_text_link" @{ if (@item.Status != "in_progress") { @Html.Raw("style='display:none;'")  ; } } onclick="CancelThemeSearch(this, '@item.Id');">
                                <img class="picEdit" src="~/pause.png" width="16" height="16" />
                                <span>Остановить</span>
                            </span>*@

                           @* <span class="start_vk img_text_link" @{ if (@item.Status == "in_progress") { @Html.Raw("style='display:none;'")  ; } } onclick="RestartThemeSearch(this, '@item.Id');">
                                <img class="picEdit" src="~/play.png" width="16" height="16" />
                                <span>Перезапустить</span>
                            </span>*@

                            <a href="@Url.Action("DeleteVkUser", "Vk", new { vk_id = item.Id })" class="img_text_link">
                                <img class="picEdit" src="~/delete.png" width="16" height="16" />
                                <span>Удалить</span>
                            </a>
                            <span style="padding-right:10px"></span>
                        </td>
                    </tr>
                </table>
            </div>
        }
        else
        {
                <div class="dataPanel search_vk" disabled="disabled" data-vk-id="@item.Name" style="height:auto; padding:0px; margin-bottom:10px; position: relative; background-color:@(bcolor); opacity:@(opacity)">
                    @if (item.Status != "completed")
                    {
                        <div class="loader" style="background-color:@(bcolorSpinner)">
                            <div class="inner one" style="opacity: 1;"></div>
                            <div class="inner two" style="opacity: 1;"></div>
                            <div class="inner three" style="opacity: 1;"></div>
                        </div>
                    }
                    <table border="0" style="border-collapse: collapse; width:100%; height: 100%">
                        <tr>
                            <td style="height:40px">
                                        <img class="picTheme" src="~/found_1.png" width="20" height="20" />
                                
                                <h4 class="dataTitle" style="margin-top:0px">
                                    <a href="@Url.Action("VkResult", "Vk", new { vk_id = item.Id })">
                                        @item.Name
                                    </a>
                                </h4>
                            </td>
                        </tr>
                     @*   <tr>
                            <td valign="top">
                                <h5 class="dataContText" style="margin-top:0px">
                           
                                </h5>



                            </td>
                        </tr>*@

                        <tr>

                            <td style="height:30px">
                                <h5 class="dataContText" style="margin-top:0px">
                                    <blockquot>Обновлено:</blockquot>
                                    <blockquot class="dataContText" style="color:black">@item.Date.Value</blockquot>
                                
                                </h5>
                            </td>



                            <td colspan="3" align="right">

                                <a href="@Url.Action("EditVkUser", new { vk_id = item.Id })" class="linkText img_text_link">
                                    <img class="picEdit" src="~/cog.png" width="16" height="16" />
                                    <span>Изменить</span>
                                </a>
@*
                                <span class="stop_vk img_text_link" @{ if (@item.Status != "in_progress") { @Html.Raw("style='display:none;'")  ; } } onclick="CancelThemeSearch(this, '@item.Id');">
                                    <img class="picEdit" src="~/pause.png" width="16" height="16" />
                                    <span>Остановить</span>
                                </span>*@

                           @*     <span class="start_vk img_text_link" @{ if (@item.Status == "in_progress") { @Html.Raw("style='display:none;'")  ; } } onclick="RestartThemeSearch(this, '@item.Id');">
                                    <img class="picEdit" src="~/play.png" width="16" height="16" />
                                    <span>Перезапустить</span>
                                </span>
*@
                                <a href="@Url.Action("DeleteVkUser", "Vk", new { vk_id = item.Id })" class="img_text_link">
                                    <img class="picEdit" src="~/delete.png" width="16" height="16" />
                                    <span>Удалить</span>
                                </a>
                                <span style="padding-right:10px"></span>
                            </td>
                        </tr>
                    </table>
                </div>
            }
        
    }
</body>
</html>
