@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Core;
@using DbData.Models;
@model X.PagedList.IPagedList<Request>
@{
    ViewBag.Title = "Фотографии пользователя";
}
<head>
    <link rel="stylesheet" href="~/css/PagedList.css">
</head>
<h1>Фотографии пользователя: @ViewBag.Name</h1>
<style>
    .image-container {
        width: 100%; /* Фотографии будут занимать всю ширину */
        border: 2px solid #ccc; /* Рамка изображения */
        padding: 5px; /* Отступ внутри рамки */
        margin: 5px; /* Отступ вокруг каждого изображения */
        box-sizing: border-box; /* Учитываем padding и border при определении ширины */
        display: flex; /* Располагаем фотографии в ряд */
        flex-wrap: wrap; /* Переносим на следующую строку, если места не хватает */
        justify-content: space-around; /* Выравниваем фотографии по ширине */
    }

    .image-container a {
        width: calc(25% - 10px); /* Размер каждой фотографии (вычитаем отступы) */
        height: auto; /* Автоматический расчет высоты для поддержки соотношения сторон */
        display: block; /* Для правильного отображения изображения внутри контейнера */
        border: 1px solid #000; /* Черная рамка вокруг изображения */
        margin: 5px; /* Отступ вокруг каждой фотографии */
    }
</style>    
